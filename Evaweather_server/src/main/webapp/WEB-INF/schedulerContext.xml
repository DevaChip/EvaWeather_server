<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- 초단기실황 조회 작업 -->
	<bean id="job_ultraSrtNcst"
		class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass"
			value="com.devachip.evaweather.scheduler.JobUltraSrtNcst"></property>
	</bean>
	
	<!-- 초단기예보 조회 작업 -->
	<bean id="job_ultraSrtFcst"
		class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass"
			value="com.devachip.evaweather.scheduler.JobUltraSrtFcst"></property>
	</bean>
	
	<!-- 동네예보 조회 작업 -->
	<bean id="job_vilageFcst"
		class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass"
			value="com.devachip.evaweather.scheduler.JobVilageFcst"></property>
	</bean>
	
	<!-- 오래된 날씨 정보 삭제 작업 -->
	<bean id="job_deleteOldFcstData"
		class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<property name="jobClass"
			value="com.devachip.evaweather.scheduler.JobDeleteOldFcstData"></property>
	</bean>

	<!-- 스케쥴러 전체 관리 -->
	<bean id="schedulerFactory"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="quartzProperties">
			<props>
				<prop key="org.quartz.scheduler.instanceName">EvaWeather Scheduler</prop>
				<prop key="org.quartz.scheduler.skipUpdateCheck">true</prop>
				<prop key="org.quartz.threadPool.class">org.quartz.simpl.SimpleThreadPool</prop>
				<prop key="org.quartz.threadPool.threadCount">3</prop>
				<prop key="org.quartz.threadPool.threadPriority">5</prop>
				<prop key="org.quartz.jobStore.class">org.quartz.simpl.RAMJobStore</prop>
				<prop key="org.quartz.jobStore.misfireThreshold">1000</prop>
			</props>
		</property>
		
		<property name="triggers">
			<list>
				<!-- 40분부터 10분마다 -->
				<bean id="trigger_ultraSrtNcst"
					class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
					<property name="name" value="schedule_ultraSrtNcst" />
					<property name="jobDetail" ref="job_ultraSrtNcst" />
					<property name="description" value="초단기실황 정보 업데이트" />
					<property name="cronExpression" value="0 40/10 * * * ?"></property>
					<property name="misfireInstruction" value="2"></property>
				</bean>
				
				<!-- 매 시각 45분 -->
				<bean id="trigger_ultraSrtFcst"
					class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
					<property name="name" value="schedule_ultraSrtFcst" />
					<property name="jobDetail" ref="job_ultraSrtFcst" />
					<property name="description" value="초단기예보 정보 업데이트" />
					<property name="cronExpression" value="0 45 * * * ?"></property>
					<property name="misfireInstruction"	value="2"></property>
				</bean>
				
				<!-- 2시 10분부터 3시간마다 -->
				<bean id="trigger_vilageFcst"
					class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
					<property name="name" value="schedule_vilageFcst" />
					<property name="jobDetail" ref="job_vilageFcst" />
					<property name="description" value="동네예보 정보 업데이트" />
					<property name="cronExpression" value="0 10 2/3 * * ?"></property>	
					<property name="misfireInstruction" value="2"></property>
				</bean>
				
				<!-- 매일 새벽 2시 -->
				<bean id="trigger_deleteOldFcstData"
					class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
					<property name="name" value="schedule_deleteOldFcstData" />
					<property name="jobDetail" ref="job_deleteOldFcstData" />
					<property name="description" value="오래된 날씨 정보 삭제" />
					<property name="cronExpression" value="0 0 2 * * ?"></property>	
					<property name="misfireInstruction" value="2"></property>
				</bean>
			</list>
		</property>
	</bean>
</beans>